<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Akıllı Kütüphane</title>
    
    <!-- Hocam, Bootstrap CDN'den yüklüyorum - mobil uyumlu olması için -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome ikonlar için -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        /* Hocam, basit özel stiller ekledim */
        body {
            background-color: #f5f5f5;
        }
        .navbar {
            background-color: #2c3e50 !important;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .footer {
            background-color: #2c3e50;
            color: white;
            padding: 20px 0;
            margin-top: 50px;
        }
        .card-bos {
            border-left: 4px solid #27ae60;
        }
        .card-dolu {
            border-left: 4px solid #e74c3c;
        }
    </style>
</head>
<body>
    <!-- Hocam, üst menü (navbar) burada -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-book-reader"></i> Akıllı Kütüphane
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Masa"><i class="fas fa-chair"></i> Masalar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Masa/QRTara"><i class="fas fa-qrcode"></i> QR Tara</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Masa/Rezervasyonlarim"><i class="fas fa-history"></i> Rezervasyonlarım</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkinda"><i class="fas fa-info-circle"></i> Hakkında</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hocam, ana içerik burada render ediliyor -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Alt bilgi (footer) -->
    <footer class="footer text-center">
        <div class="container">
            <p class="mb-1">
                <strong>Akıllı Kütüphane Sistemi</strong> - TÜBİTAK 2209-A Projesi
            </p>
            <p class="mb-0">
                <small>Geliştirici: Hasan Enes Öksüzkaya | Danışman: Öğr. Gör. Nurullah Öztürk</small>
            </p>
            <p class="mb-0">
                <small>Kayseri Üniversitesi - Bilgisayar Programcılığı</small>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
